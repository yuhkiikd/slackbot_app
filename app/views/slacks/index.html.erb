<p id="notice"><%= notice %></p>

<h1>Slacks</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @slacks.each do |slack| %>
      <tr>
        <td><%= slack.title %></td>
        <td><%= slack.content %></td>
        <td><%= link_to 'Show', slack %></td>
        <td><%= link_to 'Edit', edit_slack_path(slack) %></td>
        <td><%= link_to 'Destroy', slack, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Slack', new_slack_path %>
